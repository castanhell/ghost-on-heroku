{{!< default }}



{{! Blog navbar }}
<nav class="navbar fixed shaded">
  <div class="navbar--row container">
    <!-- Icon -->
    <!-- <div class="navbar--icon"></div> -->
    <!-- Title -->
    <a class="navbar--title" href="{{@blog.url}}">{{@blog.title}}</a>
    <!-- Spacer -->
    <div class="navbar--spacer"></div>
    <!-- Links -->
    <nav class="navbar--nav">
      <a class="navbar--nav-link ripple" href="#!">
        <span class="hide-on-medium">Quem somos</span>
      </a>
      <a class="navbar--nav-link ripple" href="#!">
        <i class="mdi mdi-twitter"></i>
        <span class="hide-on-medium">Twitter</span>
      </a>
      <a class="navbar--nav-link ripple" href="#!">
        <i class="mdi mdi-github-circle"></i>
        <span class="hide-on-medium">Github</span>
      </a>
      <a class="navbar--nav-link ripple" href="#!">
        <i class="mdi mdi-google-plus"></i>
        <span class="hide-on-medium">Google+</span>
      </a>
    </nav>
  </div>
</nav>


{{! Blog header }}
<header class="header shaded bg-darken">
  <!-- Background -->
  {{#if @blog.cover}}
    <img class="bg-image" src="{{@blog.cover}}" />
  {{/if}}
</header>


{{! Blog content }}
<main class="content" role="main">
  <div class="main--content container">

  {{#foreach posts}}
    {{#if image}}
      <article role="article">
      <!-- Header -->
      <header >
    {{else}}
      <article role="article">
      <!-- Header -->
      <header >
    {{/if}}
        <!-- Title -->
        <h5 itemprop="headline"> <a href="{{url}}"> {{title}} </a> </h5>
        <span>
          <i class="fa fa-calendar-o"></i>
          <time datetime="{{date format='YYYY-MM-DD'}}" itemprop="datePublished">
            {{date format='DD MMM YYYY'}}
          </time>
        </span>
        <!-- Image -->
        <!-- {{#if image}}<img class="bg-image" src="{{image}}" />{{/if}} -->
      </header>
      <!-- Content -->
      <section >
        <summary itemprop="articleBody">
          {{excerpt words="50"}}&hellip;
        </summary>
      </section>
      <!-- Actions -->
      <footer class="card--actions right">
        <a class="button ripple" href="{{url}}">Leia mais</a>
      </footer>
    </article>
  {{/foreach}}
  </div>
</main>


{{! Blog pagination }}
{{#if pagination}}{{pagination}}{{/if}}
