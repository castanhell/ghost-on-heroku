	<script>

		//Menu Toggle
		$("#icon").click(function() {
		    $(this).toggleClass("active");
	        $("#menu").fadeToggle();
        });

		//Code Highlighter
        $(document).ready(function() {
          $('pre code').each(function(i, block) {
            hljs.highlightBlock(block);
          });
        });

